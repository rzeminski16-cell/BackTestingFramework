{
  "_description": "Centralized strategy parameter configuration. All systems should reference this file.",
  "_version": "1.0",

  "strategies": {
    "BaseAlphaTrendStrategy": {
      "display_name": "Base Alpha Trend Strategy",
      "description": "Simplified AlphaTrend strategy with time-based exit. Entry on AlphaTrend buy signal, exit after max hold days.",
      "trade_direction": "LONG",
      "parameters": {
        "atr_multiplier": {
          "type": "float",
          "default": 2.0,
          "configurable": true,
          "optimization": {
            "min": 0.5,
            "max": 5.0,
            "step": 0.25
          },
          "description": "ATR multiplier for stop loss calculation",
          "category": "Stop Loss"
        },
        "risk_percent": {
          "type": "float",
          "default": 2.0,
          "configurable": true,
          "optimization": {
            "min": 0.5,
            "max": 10.0,
            "step": 0.5
          },
          "description": "Percentage of equity to risk per trade at stop loss",
          "category": "Position Sizing"
        },
        "max_hold_days": {
          "type": "int",
          "default": 10,
          "configurable": true,
          "optimization": {
            "min": 1,
            "max": 60,
            "step": 1
          },
          "description": "Maximum days to hold a position before forced exit",
          "category": "Exit Rules"
        },
        "alpha_atr_multiplier": {
          "type": "float",
          "default": 1.0,
          "configurable": true,
          "optimization": {
            "min": 0.5,
            "max": 3.0,
            "step": 0.1
          },
          "description": "Base multiplier for ATR bands in AlphaTrend calculation",
          "category": "AlphaTrend Calculation"
        },
        "smoothing_length": {
          "type": "int",
          "default": 3,
          "configurable": true,
          "optimization": {
            "min": 1,
            "max": 10,
            "step": 1
          },
          "description": "EMA period for AlphaTrend smoothing",
          "category": "AlphaTrend Calculation"
        },
        "percentile_period": {
          "type": "int",
          "default": 100,
          "configurable": true,
          "optimization": {
            "min": 20,
            "max": 200,
            "step": 10
          },
          "description": "Lookback period for dynamic MFI thresholds",
          "category": "AlphaTrend Calculation"
        }
      }
    },

    "RandomControlStrategy": {
      "display_name": "Random Control Strategy",
      "description": "Control/baseline strategy with random entry and exit for comparison. Uses risk-based position sizing.",
      "trade_direction": "LONG",
      "parameters": {
        "entry_probability": {
          "type": "float",
          "default": 0.10,
          "configurable": true,
          "optimization": {
            "min": 0.01,
            "max": 0.30,
            "step": 0.01
          },
          "description": "Probability of entry each day (0.10 = 10%)",
          "category": "Entry/Exit"
        },
        "exit_probability": {
          "type": "float",
          "default": 0.10,
          "configurable": true,
          "optimization": {
            "min": 0.01,
            "max": 0.30,
            "step": 0.01
          },
          "description": "Probability of exit each day (0.10 = 10%)",
          "category": "Entry/Exit"
        },
        "atr_multiplier": {
          "type": "float",
          "default": 2.0,
          "configurable": true,
          "optimization": {
            "min": 0.5,
            "max": 5.0,
            "step": 0.25
          },
          "description": "ATR multiplier for stop loss calculation",
          "category": "Stop Loss"
        },
        "risk_percent": {
          "type": "float",
          "default": 2.0,
          "configurable": true,
          "optimization": {
            "min": 0.5,
            "max": 10.0,
            "step": 0.5
          },
          "description": "Percentage of equity to risk per trade at stop loss",
          "category": "Position Sizing"
        },
        "random_seed": {
          "type": "int",
          "default": null,
          "configurable": true,
          "optimization": null,
          "description": "Random seed for reproducibility (null for random)",
          "category": "Misc"
        }
      }
    }
  }
}
